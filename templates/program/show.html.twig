{% extends "base.html.twig" %}

{% block title %}Série #{{ program.id }}{% endblock %}

{% block body %}
    <div class="media">
        <img style="width: 250px; height: 400px;" class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
        <div class="media-body">
            <h1 class="mt-0">{{ program.title }}</h1>
            <p>{{ program.synopsis }}</p>
            <p>Catégorie : {{ program.category.name }}</p>
        </div>
        <div class="show-list">
            {% for season in program.season %}
                <h2><a href="{{ path('program_season_show', {slug:program.slug, seasonId:season.id})}}">Saison n° {{ season.number }}</a></h2>
            {% else %}
                 Aucune série(s) trouvée(s).
            {% endfor %}
        </div>
    </div>
    <strong>Acteurs :</strong>
    <ul>
        {% for actor in program.actors %}
            <li><a href="{{ path("actor_show", { id: actor.id }) }}">{{ actor.name }}</a></li>
        {% else %}
            <li>Aucun acteur(s) trouvé(s) pour cette série</li>
        {% endfor %}
    </ul>

    <a href="{{ path('program_index') }}">
        Retour à la liste des programmes
    </a>
{% endblock %}