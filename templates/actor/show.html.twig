{% extends "base.html.twig" %}

{% block title %}Acteur : {{ actor.name }}{% endblock %}

{% block body %}
    <div class="media">
        <div class="media-body">
            <h1 class="mt-0">{{ actor.name }}</h1>
        </div>
        <div class="show-list">
            {% for program in actor.programs %}
                <h2><a href="{{ path("program_show", { slug: program.slug }) }}">{{program.title}}</a></h2>
            {% else %}
                Aucune série trouvée.
            {% endfor %}
        </div>
    </div>

    <a href="{{ path('actor_index') }}">
        Retour à la liste des acteurs
    </a>
{% endblock %}